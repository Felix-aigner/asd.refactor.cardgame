<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" maxHeight="Infinity" maxWidth="Infinity" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sockn.controllers.MenuController">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
<!--    <gridLinesVisible>true</gridLinesVisible>-->
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="always" GridPane.rowIndex="0" GridPane.vgrow="always">
        <Label id="heading" text="SOCKN" />
    </HBox>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.hgrow="always" GridPane.rowIndex="1" GridPane.vgrow="always">
        <Label id="labelPlayersCount" text="Spieler:" />
    </HBox>
    <HBox id="wrapperPlayersCount" alignment="CENTER" GridPane.columnIndex="1" GridPane.hgrow="always" GridPane.rowIndex="1" GridPane.vgrow="always">
        <Label fx:id="buttonTwoPlayers" styleClass="buttonPlayersCount" text="2" />
        <Label fx:id="buttonThreePlayers" styleClass="buttonPlayersCount" text="3" />
        <Label fx:id="buttonFourPlayers" styleClass="buttonPlayersCount" text="4" />
    </HBox>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.hgrow="always" GridPane.rowIndex="2" GridPane.vgrow="always">
        <Label id="labelPlayerName" text="Name:" />
    </HBox>
    <HBox id="wrapperPlayerName" alignment="CENTER" GridPane.columnIndex="1" GridPane.hgrow="always" GridPane.rowIndex="2" GridPane.vgrow="always">
        <TextField fx:id="textFieldPlayerName" prefHeight="27.0" prefWidth="282.0">Player</TextField>
    </HBox>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="always" GridPane.rowIndex="3" GridPane.vgrow="always">
        <Button fx:id="buttonStart" text="Start" />
    </HBox>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <Text fx:id="actiontarget" />
    </HBox>

    <stylesheets>
        <URL value="@../resources/css/Menu.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
